{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    // lib options
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    /* Linting */
    "strict": true,
  },
  "include": [
    "src",
    "vite.config.ts"
  ],
  "exclude": [
    "dist",
    "**/*.stories.tsx"
  ]
}